<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <LinearLayout
    android:id="@+id/favourite_item_name_container"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:background="@color/lighter_grey"
    android:orientation="vertical"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintWidth_default="percent"
    app:layout_constraintWidth_percent="0.8">

    <TextView
      android:id="@+id/display_full_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="7sp"
      android:gravity="center"
      android:textColor="#333E2F"
      android:textSize="20sp"
      android:textStyle="bold"
      android:text="Full Name"/>

    <TextView
      android:id="@+id/display_common_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:textColor="#5A5A5A"
      android:textSize="18sp"
      android:text="Common Name"/>

    <TextView
      android:id="@+id/display_family_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10sp"
      android:gravity="center"
      android:textColor="#5A5A5A"
      android:textSize="18sp"
      android:text="family Name"/>
  </LinearLayout>

  <ImageButton
    android:id="@+id/favourite_item_remove_favourite_button"
    android:layout_width="0dp"
    app:layout_constraintWidth_percent="0.2"
    android:layout_height="0dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="@+id/favourite_item_name_container"
    android:src="@drawable/fav_button"
    android:scaleType="fitCenter"
    />

</androidx.constraintlayout.widget.ConstraintLayout>