<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.info.InfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp">

        <TextView
            android:id="@+id/infoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="8sp"
            android:text="@string/info"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            app:layout_constraintBottom_toTopOf="@id/impressumButton"
            app:layout_constraintTop_toBottomOf="@id/infoTitle"
            app:layout_constraintWidth_percent="0.95"
            tools:layout_editor_absoluteX="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:id="@+id/infoTableOpeningHours"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="30dp"
                    android:stretchColumns="0">

                    <TextView
                        android:padding="20dip"
                        android:text="@string/infoOpeningHoursTitle"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:layout_gravity="bottom"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/infoOpeningHoursR1C2" />

                        <TextView
                            android:layout_gravity="bottom"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/infoOpeningHoursR1C3" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left">

                        <TextView
                            android:layout_marginHorizontal="10dp"
                            android:paddingTop="5dip"
                            android:text="@string/infoOpeningHoursR2C1"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:padding="0.1dip" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:layout_gravity="top"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/infoOpeningHoursR2C2"
                            android:typeface="monospace" />

                        <TextView
                            android:layout_gravity="top"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/infoOpeningHoursR2C3"
                            android:typeface="monospace" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left">

                        <TextView
                            android:layout_marginHorizontal="10dp"
                            android:paddingTop="5dip"
                            android:text="@string/infoOpeningHoursR3C1"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:padding="0.1dip" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:layout_gravity="top"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/infoOpeningHoursR3C2"
                            android:typeface="monospace" />

                        <TextView
                            android:layout_gravity="top"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/infoOpeningHoursR3C3"
                            android:typeface="monospace" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left">

                        <TextView
                            android:layout_marginHorizontal="10dp"
                            android:paddingTop="5dip"
                            android:text="@string/infoOpeningHoursR4C1"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:padding="0.1dip" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:layout_gravity="top"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/infoOpeningHoursR4C2"
                            android:typeface="monospace" />

                        <TextView
                            android:layout_gravity="top"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/infoOpeningHoursR4C3"
                            android:typeface="monospace" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left">

                        <TextView
                            android:layout_marginHorizontal="10dp"
                            android:paddingTop="5dip"
                            android:text="@string/infoOpeningHoursR5C1"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:padding="0.1dip" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:layout_gravity="top"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/infoOpeningHoursR5C2" />

                        <TextView
                            android:layout_gravity="top"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/infoOpeningHoursR5C3" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left">

                        <TextView
                            android:layout_marginHorizontal="10dp"
                            android:paddingTop="5dip"
                            android:text="@string/infoOpeningHoursR6C1"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:padding="0.1dip" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:layout_gravity="top"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/infoOpeningHoursR6C2"
                            android:typeface="monospace" />

                        <TextView
                            android:layout_gravity="top"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/infoOpeningHoursR6C3" />
                    </TableRow>
                </TableLayout>

                <TextView
                    android:id="@+id/infoText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/layout_border"
                    android:gravity="center"
                    android:text="@string/infoContent" />

            </LinearLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/impressumArrow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:elevation="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/impressumButton"
            app:layout_constraintLeft_toLeftOf="@id/impressumButton"
            app:layout_constraintRight_toRightOf="@id/impressumButton"
            app:layout_constraintTop_toTopOf="@+id/impressumButton"
            app:tint="@color/green" />
        <Button
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:id="@+id/impressumButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:strokeColor="@color/green"
            app:strokeWidth="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.5"
            android:layout_marginHorizontal="30dp">

        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>