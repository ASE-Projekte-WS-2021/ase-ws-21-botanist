<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".mainfragments.info.InfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/titleConstraint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/titlebox"
            android:layout_marginBottom="10dp"
            app:layout_constraintDimensionRatio="W,226:68"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/infoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/info"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:background="@color/light_grey"
            app:layout_constraintBottom_toTopOf="@id/impressumButton"
            app:layout_constraintLeft_toRightOf="@id/scrollView2"
            app:layout_constraintTop_toBottomOf="@id/titleConstraint" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:scrollbarThumbVertical="@color/green"
            android:background="@color/lighter_grey"
            app:layout_constraintBottom_toTopOf="@id/impressumButton"
            app:layout_constraintTop_toBottomOf="@id/titleConstraint"
            app:layout_constraintWidth_percent="0.95"
            tools:layout_editor_absoluteX="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="4dp">

                <TableLayout
                    android:id="@+id/infoTableOpeningHours"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="30dp"
                    android:stretchColumns="0">

                    <TextView
                        android:padding="20dip"
                        android:text="@string/info_opening_hours_title"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:layout_gravity="bottom"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/info_opening_hours_R1C2" />

                        <TextView
                            android:layout_gravity="bottom"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/info_opening_hours_R1C3" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left">

                        <TextView
                            android:layout_marginHorizontal="10dp"
                            android:paddingTop="5dip"
                            android:text="@string/info_opening_hours_R2C1"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:padding="0.1dip" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:layout_gravity="top"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/info_opening_hours_R2C2"
                            android:typeface="monospace" />

                        <TextView
                            android:layout_gravity="top"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/info_opening_hours_R2C3"
                            android:typeface="monospace" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left">

                        <TextView
                            android:layout_marginHorizontal="10dp"
                            android:paddingTop="5dip"
                            android:text="@string/info_opening_hours_R3C1"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:padding="0.1dip" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:layout_gravity="top"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/info_opening_hours_R3C2"
                            android:typeface="monospace" />

                        <TextView
                            android:layout_gravity="top"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/info_opening_hours_R3C3"
                            android:typeface="monospace" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left">

                        <TextView
                            android:layout_marginHorizontal="10dp"
                            android:paddingTop="5dip"
                            android:text="@string/info_opening_hours_R4C1"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:padding="0.1dip" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:layout_gravity="top"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/info_opening_hours_R4C2"
                            android:typeface="monospace" />

                        <TextView
                            android:layout_gravity="top"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/info_opening_hours_R4C3"
                            android:typeface="monospace" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left">

                        <TextView
                            android:layout_marginHorizontal="10dp"
                            android:paddingTop="5dip"
                            android:text="@string/info_opening_hours_R5C1"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:padding="0.1dip" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:layout_gravity="top"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/info_opening_hours_R5C2" />

                        <TextView
                            android:layout_gravity="top"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/info_opening_hours_R5C3" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left">

                        <TextView
                            android:layout_marginHorizontal="10dp"
                            android:paddingTop="5dip"
                            android:text="@string/info_opening_hours_R6C1"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:padding="0.1dip" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:layout_gravity="top"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/info_opening_hours_R6C2"
                            android:typeface="monospace" />

                        <TextView
                            android:layout_gravity="top"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/info_opening_hours_R6C3" />
                    </TableRow>
                </TableLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@color/green"/>

                <TextView
                    android:id="@+id/infoText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/info_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>
        </ScrollView>
        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:scrollbarThumbVertical="@color/green"
            android:background="@color/lighter_grey"
            app:layout_constraintBottom_toTopOf="@id/impressumButton"
            app:layout_constraintTop_toBottomOf="@id/titleConstraint"
            app:layout_constraintLeft_toRightOf="@id/scrollView2"
            app:layout_constraintWidth_percent="0.98">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="11dp">

                <TextView
                    android:id="@+id/infoText2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/impressum_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/infoText3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/impressum_sources"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>


            </LinearLayout>
        </ScrollView>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/inside_box_shadow"
            app:layout_constraintTop_toTopOf="@id/scrollView2"
            app:layout_constraintBottom_toBottomOf="@id/scrollView2"
            app:layout_constraintLeft_toLeftOf="@id/scrollView2"
            app:layout_constraintRight_toRightOf="@id/scrollView2"/>


        <ImageButton
            android:id="@+id/impressumButton"
            android:contentDescription="@string/testInfoNavigation"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:src="@drawable/button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.8"/>

        <ImageView
            android:id="@+id/impressumArrow"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ic_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/impressumButton"
            app:layout_constraintLeft_toLeftOf="@id/impressumButton"
            app:layout_constraintRight_toRightOf="@id/impressumButton"
            app:layout_constraintTop_toTopOf="@+id/impressumButton"
            app:tint="@color/green"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintHeight_percent="0.022"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>