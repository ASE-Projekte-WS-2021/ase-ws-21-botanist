<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context=".ui.info.InfoFragment"
    >

    <TextView
        android:id="@+id/infoTitle"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="8sp"
        android:text="@string/info"
        android:textAlignment="viewEnd"
        android:textColor="@color/green"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_margin="8dp"
        android:layout_width="350dp"
        android:layout_height="410dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:id="@+id/infoTableOpeningHours"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp">

                <TableRow
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="@string/infoOpeningHoursTitle"
                        android:padding="8dip"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <TextView
                        android:text="@string/infoOpeningHoursR1C1"
                        android:padding="3dip" />
                    <TextView
                        android:text="@string/infoOpeningHoursR1C2"
                        android:gravity="right"
                        android:padding="3dip" />
                    <TextView
                        android:text="@string/infoOpeningHoursR1C3"
                        android:gravity="right"
                        android:padding="3dip" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="0.3dip"
                    android:background="@color/black"/>
                <TableRow
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="@string/infoOpeningHoursR2C1"
                        android:padding="5dip"/>
                    <TextView
                        android:text="@string/infoOpeningHoursR2C2"
                        android:gravity="right"
                        android:padding="5dip" />
                    <TextView
                        android:text="@string/infoOpeningHoursR2C3"
                        android:gravity="right"
                        android:padding="5dip" />
                </TableRow>
                <TableRow
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="@string/infoOpeningHoursR3C1"
                        android:padding="5dip"/>
                    <TextView
                        android:text="@string/infoOpeningHoursR3C2"
                        android:gravity="right"
                        android:padding="5dip" />
                    <TextView
                        android:text="@string/infoOpeningHoursR3C3"
                        android:gravity="right"
                        android:padding="5dip" />
                </TableRow>
                <TableRow
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="@string/infoOpeningHoursR4C1"
                        android:padding="5dip"/>
                    <TextView
                        android:text="@string/infoOpeningHoursR4C2"
                        android:gravity="right"
                        android:padding="5dip" />
                    <TextView
                        android:text="@string/infoOpeningHoursR4C3"
                        android:gravity="right"
                        android:padding="5dip" />
                </TableRow>
                <TableRow
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="@string/infoOpeningHoursR5C1"
                        android:padding="5dip"/>
                    <TextView
                        android:text="@string/infoOpeningHoursR5C2"
                        android:gravity="right"
                        android:padding="5dip" />
                    <TextView
                        android:text="@string/infoOpeningHoursR5C3"
                        android:gravity="right"
                        android:padding="5dip" />
                </TableRow>
                <TableRow
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="@string/infoOpeningHoursR6C1"
                        android:padding="5dip"/>
                    <TextView
                        android:text="@string/infoOpeningHoursR6C2"
                        android:gravity="right"
                        android:padding="5dip" />
                    <TextView
                        android:text="@string/infoOpeningHoursR6C3"
                        android:gravity="right"
                        android:padding="5dip" />
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/infoText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/infoContent" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/impressumButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Impressum" />

</LinearLayout>