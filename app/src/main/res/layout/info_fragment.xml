<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.info.InfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp">

        <TextView
            android:id="@+id/infoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="8sp"
            android:text="@string/info"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/infoTitle"
            app:layout_constraintBottom_toTopOf="@id/impressumButton"
            app:layout_constraintWidth_percent="0.95"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:id="@+id/infoTableOpeningHours"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:padding="8dip"
                            android:text="@string/infoOpeningHoursTitle" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:padding="3dip"
                            android:text="@string/infoOpeningHoursR1C1" />

                        <TextView
                            android:gravity="right"
                            android:padding="3dip"
                            android:text="@string/infoOpeningHoursR1C2" />

                        <TextView
                            android:gravity="right"
                            android:padding="3dip"
                            android:text="@string/infoOpeningHoursR1C3" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:padding="0.3dip" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:padding="5dip"
                            android:text="@string/infoOpeningHoursR2C1" />

                        <TextView
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/infoOpeningHoursR2C2" />

                        <TextView
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/infoOpeningHoursR2C3" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:padding="5dip"
                            android:text="@string/infoOpeningHoursR3C1" />

                        <TextView
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/infoOpeningHoursR3C2" />

                        <TextView
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/infoOpeningHoursR3C3" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:padding="5dip"
                            android:text="@string/infoOpeningHoursR4C1" />

                        <TextView
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/infoOpeningHoursR4C2" />

                        <TextView
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/infoOpeningHoursR4C3" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:padding="5dip"
                            android:text="@string/infoOpeningHoursR5C1" />

                        <TextView
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/infoOpeningHoursR5C2" />

                        <TextView
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/infoOpeningHoursR5C3" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:padding="5dip"
                            android:text="@string/infoOpeningHoursR6C1" />

                        <TextView
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/infoOpeningHoursR6C2" />

                        <TextView
                            android:gravity="right"
                            android:padding="5dip"
                            android:text="@string/infoOpeningHoursR6C3" />
                    </TableRow>
                </TableLayout>

                <TextView
                    android:id="@+id/infoText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/infoContent" />

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/impressumButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Impressum"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.5"
            android:layout_marginHorizontal="30dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>